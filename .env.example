# Database connection
DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"

# NextAuth configuration
# For local development:
# NEXTAUTH_URL="http://localhost:3000"
# For production (Vercel):
# NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret" # Generate with: openssl rand -base64 32

# OAuth Providers
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Socket.io configuration
# For local development:
# NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"
# For production, you'll need to:
# 1. Deploy Socket.IO server separately (e.g., Heroku, DigitalOcean)
# 2. Use a WebSocket service (e.g., Pusher, Socket.io Cloud)
# 3. Or use Vercel Edge Functions with WebSocket support
NEXT_PUBLIC_SOCKET_URL="your-socket-server-url"